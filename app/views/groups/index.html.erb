<p id="notice"><%= notice %></p>

<h1 class="text-center mt-5">Groups List</h1>

<table class="table mt-5">
  <thead class="thead-dark">
    <tr class="text-center">
      <th>Name</th>
      <th>Debut date</th>
      <th>Group type</th>
      <th>Cast</th>
      <th>Concerts</th>
      <th>Total Attendance</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr class="text-center">
        <td><%= group.name %></td>
        <td><%= group.debut_date %></td>
        <td><%= group.group_type %></td>
        <td><%= group.cast %></td>
        <td><%= group.concerts.count %></td>
        <td><%= group.totalAttendance %></td>
        <td><%= link_to 'Show', group, :class => "btn btn-light" %>
        <%= link_to 'Edit', edit_group_path(group), :class => "btn btn-light" %>
        <%= link_to 'Destroy', group, :class => "btn btn-light", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="text-center mt-5">
<%= link_to 'New Group', new_group_path, :class => "btn btn-primary" %>
</div>

<p id="notice"><%= notice %></p>

<h1 class="text-center mt-5">Concerts</h1>

<table class="table mt-5">
  <thead class="thead-dark">
    <tr class="text-center">
      <th>Date</th>
      <th>Duration</th>
      <th>Location</th>
      <th>Attendance</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @concerts.each do |concert| %>
      <tr class="text-center">
        <td><%= concert.date %></td>
        <td><%= concert.duration %></td>
        <td><%= concert.location %></td>
        <td><%= concert.attendance %></td>
        <td>
          <%= link_to 'Show', concert, :class => "btn btn-light" %>
          <%= link_to 'Edit', edit_concert_path(concert), :class => "btn btn-light" %>
          <%= link_to 'Destroy', concert, :class => "btn btn-light", method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="text-center">
  <%= link_to 'New Concert', new_concert_path, :class => "btn btn-primary" %>
</div>
